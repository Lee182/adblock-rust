{
  "name": "adblock-rs",
  "version": "0.2.9",
  "description": "Very fast, Rust-based, native implementation of ad-blocker engine for Node",
  "main": "lib/index.js",
  "author": "Andrius Aucinas <aaucinas@brave.com>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/brave/adblock-rust#readme",
  "bugs": {
    "url": "https://github.com/brave/adblock-rust/issues"
  },
  "repository": "https://github.com/brave/adblock-rust.git",
  "dependencies": {
    "neon-cli": "^0.4.0",
    "node-pre-gyp": "github:amilajack/node-pre-gyp#neon-compat",
    "node-pre-gyp-github": "^1.4.3"
  },
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build=false || neon build --release",
    "package": "node-pre-gyp package",
    "upload-binary": "node-pre-gyp package && node-pre-gyp-github publish"
  },
  "binary": {
    "module_name": "index",
    "host": "https://github.com/brave/adblock-rust/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  }
}
